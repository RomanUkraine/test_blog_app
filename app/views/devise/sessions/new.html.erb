<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="font-mono bg-gray-400">
    <!-- Container -->
    <div class="container mx-auto">
      <div class="flex justify-center px-6">
        <!-- Row -->
        <div class="w-full xl:w-3/4 lg:w-11/12 flex">
          <!-- Col -->
          <div
						class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg"
						style="background-image: url('https://source.unsplash.com/K4mSJ7kc0As/600x800')"
					></div>
          <!-- Col -->
          <div class="w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none">
            <h3 class="pt-4 text-2xl text-center">Welcome Back!</h3>
            <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded">
              <div class="mb-4">
                <label class="block mb-2 text-sm font-bold text-gray-700" for="email">
                  E-mail
                </label>
                <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    placeholder: "Email",
                    class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                %>
              </div>
              <div class="mb-4">
                <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                  Password
                </label>
                <%= f.password_field :password,
                    autocomplete: "current-password",
                    class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border border-red-500 rounded shadow appearance-none focus:outline-none focus:shadow-outline",
                    placeholder: "Password"
                %>
              </div>
              <div class="mb-4">
								<%= f.check_box :remember_me, class: 'mr-2 leading-tight', id: 'checkbox_id' %>
                <label class="text-sm" for="checkbox_id">
                  Remember Me
                </label>
              </div>
              <div class="mb-6 text-center">
                <%= f.submit "Sign In",
                class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline"
                %>
              </div>
              <hr class="mb-6 border-t" />
              <div class="text-center">
								<%= link_to 'Create an Account!', new_user_registration_path, class: 'inline-block text-sm text-blue-500 align-baseline hover:text-blue-800' %>
              </div>
              <div class="text-center">
								<%= link_to 'Forgot Password?', new_user_password_path, class: 'inline-block text-sm text-blue-500 align-baseline hover:text-blue-800' %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
