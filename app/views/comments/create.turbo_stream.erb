<%= turbo_stream.append "comments_#{dom_id(@comment.post)}" do %>
  <%= render 'comment', comment: @comment %>
<% end %>

<%= turbo_stream.replace "comments_#{dom_id(@comment.post)}_count" do %>
  <%= turbo_frame_tag "comments_#{dom_id(@comment.post)}_count" do %>
    <%= @comment.post.comments.count %>
    <!-- TODO refactor @comment.post.comments.count -->
  <% end %>
<% end %>

<%= turbo_stream.replace "new_comment_form_#{dom_id(@comment.post)}" do %>
  <%= render 'form', comment: Comment.new, post: @comment.post %>
<% end %>
